                  <VBox fx:id="vBoxActive" prefHeight="60.0" prefWidth="238.0" />
               </content>
            </ScrollPane>
            <ScrollPane layoutX="12.0" layoutY="354.0" prefHeight="257.0" prefWidth="240.0">
